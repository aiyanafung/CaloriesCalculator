<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.ShakeARandomRecipeActivity">

    <ImageView
        android:id="@+id/imgHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shake_hand"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_shake" />

    <TextView
        android:id="@+id/text_shake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake to see your exclusive recipe here "
        android:fontFamily="@font/fat_font"
        android:layout_marginTop="150dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4887BA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>