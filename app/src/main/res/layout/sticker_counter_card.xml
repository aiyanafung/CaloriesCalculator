<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="408dp"
        android:layout_height="81dp"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/stickerCounterIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/stickerCounterIcon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Sended:" />

        <TextView
            android:id="@+id/received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sent"
            android:layout_toEndOf="@id/stickerCounterIcon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Received:" />

        <TextView
            android:id="@+id/sendCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/sent"
            tools:text="SentCounter" />

        <TextView
            android:id="@+id/receivedCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/received"
            android:layout_below="@id/sendCounter"
            tools:text="ReceivedCounter" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>