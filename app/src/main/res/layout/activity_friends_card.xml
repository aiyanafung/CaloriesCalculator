    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="408dp"
        android:layout_height="81dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/friends_name"
            android:layout_width="300dp"
